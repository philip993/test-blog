<form action="/posts/all" method="POST">
    <div class="form-group">
        <label for="title">Post Title</label>
        <input type="text" class="form-control" id="title" placeholder="title of your post" name='title' value='{{title}}'>
    </div>
    <div class="form-group">
        <label for="typeOfPost">Post Type</label>
        <select class="form-control" id="typeOfPost" name='typeOfPost' value='{{typeOfPost}}'>
            <option>public</option>
            <option>private</option>
            <option>draft</option>
            <option>announcement</option>
        </select>
    </div>
    <div class="form-group">
        <label for="content">Content Of Post</label>
        <textarea class="form-control" id="content" rows="3" name='content' value='{{content}}'></textarea>
    </div>
    <button type="submit">Save Post</button>
</form>